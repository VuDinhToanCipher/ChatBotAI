@page "/manage-user"
@using ChatBotAI.Application.DTOs.UserDTO
@using ChatBotAI.Application.Services.UserServices
@inject IUserService UserService
@inject IJSRuntime JS
@rendermode InteractiveServer


<h3>Quản lý người dùng</h3>

<input class="form-control mb-3"
       placeholder="🔍 Tìm người dùng theo tên, username hoặc email..."
       @bind="searchTerm"
       @bind:event="oninput" />

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (Client == null || !Client.Any())
{
    <div class="alert alert-info">Chưa có người dùng nào.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Tên</th>
                    <th>Tên người dùng</th>
                    <th>Email</th>
                    <th>Admin</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in FilteredUsers)
                {
                    <tr>
                        <td>
                            @if (editingId == client.UserId)
                            {
                                <input class="form-control form-control-sm" @bind="editingModel.Name" />
                            }
                            else
                            {
                                @client.Name
                            }
                        </td>

                        <td>
                            @if (editingId == client.UserId)
                            {
                                <input class="form-control form-control-sm" @bind="editingModel.UserName" />
                            }
                            else
                            {
                                @client.UserName
                            }
                        </td>

                        <td>
                            @if (editingId == client.UserId)
                            {
                                <input class="form-control form-control-sm" type="email" @bind="editingModel.Email" />
                            }
                            else
                            {
                                @client.Email
                            }
                        </td>

                        <td>
                            @if (editingId == client.UserId)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" @bind="editingModel.IsAdmin" />
                                </div>
                            }
                            else
                            {
                                @if (client.IsAdmin == true)
                                {
                                    <span class="badge bg-success">✓ Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">User</span>
                                }
                            }
                        </td>

                        <td>
                            @if (editingId == client.UserId)
                            {
                                <button class="btn btn-success btn-sm me-1" @onclick="(() => SaveEdit(client.UserId))" disabled="@isSaving">
                                    @(isSaving ? "Đang lưu..." : "💾 Lưu")
                                </button>
                                <button class="btn btn-secondary btn-sm" @onclick="CancelEdit" disabled="@isSaving">
                                    ✕ Hủy
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-primary btn-sm me-1" @onclick="(() => StartEdit(client))">
                                    ✏️ Sửa
                                </button>
                                <button class="btn btn-danger btn-sm" @onclick="(() => ConfirmDelete(client))">
                                    🗑️ Xóa
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!FilteredUsers.Any())
    {
        <div class="alert alert-warning">Không tìm thấy người dùng phù hợp với từ khóa "@searchTerm"</div>
    }
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Lỗi!</strong> @errorMessage
        <button type="button" class="btn-close" @onclick="(() => errorMessage = null)"></button>
    </div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Thành công!</strong> @successMessage
        <button type="button" class="btn-close" @onclick="(() => successMessage = null)"></button>
    </div>
}

@code {
    private List<UserDTO>? Client;
    private string searchTerm = "";
    private Guid? editingId = null;
    private UserDTO editingModel = new();
    private bool isLoading = true;
    private bool isSaving = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsersAsync();
    }

    private async Task LoadUsersAsync()
    {
        try
        {
            isLoading = true;
            Client = await UserService.DisplayUserAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Không thể tải danh sách người dùng: {ex.Message}";
            Console.WriteLine($"Error loading users: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private IEnumerable<UserDTO> FilteredUsers =>
        Client == null ? Enumerable.Empty<UserDTO>() :
        string.IsNullOrWhiteSpace(searchTerm)
            ? Client
            : Client.Where(u =>
                (u.Name ?? "").Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                (u.UserName ?? "").Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                (u.Email ?? "").Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
            );

    private void StartEdit(UserDTO user)
    {
        editingId = user.UserId;
        editingModel = new UserDTO
        {
            UserId = user.UserId,
            Name = user.Name,
            UserName = user.UserName,
            Email = user.Email,
            IsAdmin = user.IsAdmin
        };
        errorMessage = null;
        successMessage = null;
    }

    private void CancelEdit()
    {
        editingId = null;
        editingModel = new UserDTO();
        errorMessage = null;
    }

    private async Task SaveEdit(Guid id)
    {
        if (string.IsNullOrWhiteSpace(editingModel.Name))
        {
            errorMessage = "Tên không được để trống";
            return;
        }

        if (string.IsNullOrWhiteSpace(editingModel.UserName))
        {
            errorMessage = "Tên người dùng không được để trống";
            return;
        }

        if (string.IsNullOrWhiteSpace(editingModel.Email))
        {
            errorMessage = "Email không được để trống";
            return;
        }

        try
        {
            isSaving = true;
            await UserService.UpdateUserAsync(editingModel);
            await LoadUsersAsync();
            successMessage = $"Đã cập nhật thông tin người dùng '{editingModel.Name}' thành công!";
            editingId = null;
            editingModel = new UserDTO();
        }
        catch (Exception ex)
        {
            errorMessage = $"Không thể cập nhật: {ex.Message}";
            Console.WriteLine($"Error updating user: {ex}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task ConfirmDelete(UserDTO user)
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm",
            $"Bạn có chắc chắn muốn xóa người dùng '{user.Name}' ({user.UserName})?");


        if (confirmed)
        {
            await DeleteUser(user.UserId);
            await LoadUsersAsync();
        }
    }

    private async Task DeleteUser(Guid userId)
    {
        try
        {
            await UserService.DeleteUserAsync(userId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Không thể xóa: {ex.Message}";
            Console.WriteLine($"Error deleting user: {ex}");
        }
    }

}