@page "/registration"
@using ChatBotAI.Application.DTOs.UserDTO
@using ChatBotAI.Application.Services.UserServices
@inject IUserService register
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="page-wrapper">
    <div class="form-container">
        <h3>Tạo tài khoản</h3>

        <EditForm Model="@userinfo" OnValidSubmit="@HandleRegistration" FormName="Registration">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label>Name:</label>
                <InputText @bind-Value="userinfo.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label>UserName:</label>
                <InputText @bind-Value="userinfo.UserName" class="form-control" />
            </div>

            <div class="form-group">
                <label>Email:</label>
                <InputText @bind-Value="userinfo.Email" type="email" class="form-control" />
            </div>

            <div class="form-group">
                <label>Password:</label>
                <InputText @bind-Value="userinfo.Password" type="password" class="form-control" />
            </div>

            <button type="submit">Đăng ký</button>

            @if (!string.IsNullOrEmpty(alertmessage))
            {
                <div class="alert">@alertmessage</div>
            }

            <p>Đã có tài khoản? <a href="/login">Đăng nhập</a></p>
        </EditForm>
    </div>
</div>


@code {
    private RegisterDTO userinfo = new();
    private string alertmessage = "";
    private async Task HandleRegistration()
    {
        try
        {
            var registration = await register.AddUserAsync(userinfo);
            alertmessage = registration.Message;
            if (registration.IsSuccess)
                NavigationManager.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            alertmessage = $"Lỗi khi đăng ký: {ex.Message}";
        }
    }
}
